<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form.quick.insert</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="sale.account_invoice_form" />
        <field name="arch" type="xml">

            <field name="partner_id" position="after">

                <label for="partner_id_street" string=" " />
                <div class="o_row mr16" id="partner-street-div">
                    <field
                        name="partner_id_street"
                        placeholder="Street"
                        attrs="{'readonly': [('partner_id', '=', False)]}"
                    />
                    <field
                        name="partner_id_street2"
                        placeholder="Street specifier"
                        attrs="{'readonly': [('partner_id', '=', False)]}"
                    />
                </div>

                <label for="partner_id_zip" string=" " />
                <div class="o_row mr16" id="partner-zip-div">
                    <field
                        name="partner_id_zip"
                        placeholder="Zip"
                        attrs="{'readonly': [('partner_id', '=', False)]}"
                    />
                    <field
                        name="partner_id_city"
                        placeholder="City"
                        attrs="{'readonly': [('partner_id', '=', False)]}"
                    />
                </div>
            </field>

            <field name="partner_shipping_id" position="after">

                <label
                    for="partner_shipping_id_street"
                    string=" "
                    groups="sale.group_delivery_invoice_address"
                />
                <div
                    class="o_row mr16"
                    id="partner-street-div"
                    groups="sale.group_delivery_invoice_address"
                >
                    <field
                        name="partner_shipping_id_street"
                        placeholder="Street"
                        attrs="{'readonly': [('partner_shipping_id', '=', False)]}"
                    />
                    <field
                        name="partner_shipping_id_street2"
                        placeholder="Street specifier"
                        attrs="{'readonly': [('partner_shipping_id', '=', False)]}"
                    />
                </div>

                <label
                    for="partner_shipping_id_zip"
                    string=" "
                    groups="sale.group_delivery_invoice_address"
                />
                <div
                    class="o_row mr16"
                    id="partner-zip-div"
                    groups="sale.group_delivery_invoice_address"
                >
                    <field
                        name="partner_shipping_id_zip"
                        placeholder="Zip"
                        attrs="{'readonly': [('partner_shipping_id', '=', False)]}"
                    />
                    <field
                        name="partner_shipping_id_city"
                        placeholder="City"
                        attrs="{'readonly': [('partner_shipping_id', '=', False)]}"
                    />
                </div>
            </field>

        </field>
    </record>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form.quick.insert</field>
        <field name="model">account.invoice</field>
        <field
            name="inherit_id"
            ref="account_invoice_invoice_address.account_invoice_invoice_address_form"
        />
        <field name="arch" type="xml">

            <field name="partner_invoice_id" position="replace" />

            <field name="partner_shipping_id" position="before">
                <field name="partner_invoice_id" />
            </field>

            <field name="partner_invoice_id" position="after">

                <label for="partner_invoice_id_street" string=" " />
                <div class="o_row mr16" id="partner-street-div">
                    <field
                        name="partner_invoice_id_street"
                        placeholder="Street"
                        attrs="{'readonly': [('partner_invoice_id', '=', False)]}"
                    />
                    <field
                        name="partner_invoice_id_street2"
                        placeholder="Street specifier"
                        attrs="{'readonly': [('partner_invoice_id', '=', False)]}"
                    />
                </div>

                <label for="partner_invoice_id_zip" string=" " />
                <div class="o_row mr16" id="partner-zip-div">
                    <field
                        name="partner_invoice_id_zip"
                        placeholder="Zip"
                        attrs="{'readonly': [('partner_invoice_id', '=', False)]}"
                    />
                    <field
                        name="partner_invoice_id_city"
                        placeholder="City"
                        attrs="{'readonly': [('partner_invoice_id', '=', False)]}"
                    />
                </div>
            </field>

        </field>
    </record>

</odoo>
