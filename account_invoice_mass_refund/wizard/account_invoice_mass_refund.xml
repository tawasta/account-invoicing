<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_account_invoice_mass_refund_wizard" model="ir.ui.view">
        <field name="model">account.invoice.mass.refund</field>
        <field name="arch" type="xml">
            <form string="Refund invoices">
                <p>The selected invoices will be refunded</p>
                <group name="Settings">
                    <field name="filter_refund" />
                    <field name="description" />
                    <field name="unreconcile" />
                </group>
                <footer>
                    <button
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <act_window
        id="action_account_invoice_mass_refund"
        multi="True"
        key2="client_action_multi"
        name="Mass refund"
        res_model="account.invoice.mass.refund"
        src_model="account.invoice"
        view_mode="form"
        target="new"
        view_type="form"
        groups="account.group_account_invoice"
    />

</odoo>
