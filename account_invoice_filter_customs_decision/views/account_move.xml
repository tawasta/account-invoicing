<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.many.attachments</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="show_name_warning" position="after">
                <field name="many_attachments" invisible="0" />
                <field name="many_attachments_false" invisible="0" />
            </field>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.invoice.select.many.attachments</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <filter name="in_payment" position="before">
                <separator />
                <filter
                    string="No Customs Decisions file"
                    name="many_attachments"
                    domain="[('many_attachments_false', '=', True)]"
                />
                <filter
                    string="Customs Decisions file exists"
                    name="many_attachments"
                    domain="[('many_attachments', '=', True)]"
                />
                <separator />
            </filter>
        </field>
    </record>
</odoo>
