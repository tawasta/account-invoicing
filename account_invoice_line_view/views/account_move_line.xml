<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_account_invoice_line_line_tree" model="ir.ui.view">
        <field name="name">account.move.line.tree</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false">
                <field name="move_id" optional="show" />
                <field name="product_id" optional="show" />
                <field name="name" optional="show" />
                <field
                    name="account_id"
                    groups="account.group_account_readonly"
                    optional="hide"
                />
                <field
                    name="analytic_distribution"
                    groups="account.group_analytic_accounting"
                    optional="hide"
                />
                <field name="move_partner_id" optional="show" />
                <field name="state" optional="show" />
                <field name="date_invoice" optional="show" />
                <field name="quantity" optional="show" />
                <field name="product_uom_id" groups="uom.group_uom" optional="show" />
                <field name="price_unit" optional="show" />
                <field name="tax_ids" optional="show" />
                <field name="price_subtotal" optional="show" />
                <field name="price_total" optional="show" />
                <field name="price_average" optional="hide" />
                <field name="discount" optional="hide" />
                <field name="currency_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="account_invoice_line_customer_action" model="ir.actions.act_window">
        <field name="name">Customer invoice lines</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="view_id" ref="view_account_invoice_line_line_tree" />
        <field name="context">{'search_default_invoices':1}</field>
        <field
            name="domain"
        >[('invoice_type','in',('out_invoice', 'out_refund')),('move_type', '!=', 'entry')]</field>
    </record>

    <record id="account_invoice_line_vendor_action" model="ir.actions.act_window">
        <field name="name">Vendor invoice lines</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="view_id" ref="view_account_invoice_line_line_tree" />
        <field name="context">{'search_default_invoices':1}</field>
        <field name="domain">[('invoice_type','in',('in_invoice', 'in_refund'))]</field>
    </record>

    <menuitem
        id="menu_account_invoice_line_customer"
        action="account_invoice_line_customer_action"
        parent="account.menu_finance_receivables"
        sequence="2"
    />

    <menuitem
        id="menu_account_invoice_line_vendor"
        action="account_invoice_line_vendor_action"
        parent="account.menu_finance_payables"
        sequence="2"
    />

    <!--Sequence altered to fit 'Customer invoice lines' under 'Invoices'-->
    <record id="account.menu_action_move_out_refund_type" model="ir.ui.menu">
        <field name="sequence">3</field>
    </record>

</odoo>
