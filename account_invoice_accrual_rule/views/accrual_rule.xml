        <field name="name">account.accrual.rule.form</field>
        <field name="model">account.accrual.rule</field>
        <field name="arch" type="xml">
            <form>
                <header>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">

                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Accrual rule name" />
                        </h1>
                    </div>

                    <group name="length">
                        <field name="period_length" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
