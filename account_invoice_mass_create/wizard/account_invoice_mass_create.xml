<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_invoice_mass_create_wizard" model="ir.ui.view">
        <field name="model">account.invoice.mass.create</field>
        <field name="arch" type="xml">
            <form string="Create invoices">
                <group>
                    <field name="product_id" />
                    <field name="line_name" />
                    <field name="price_unit" />
                    <field name="quantity" />
                    <field name="payment_term_id" />
                    <field name="date_invoice" />
                    <field name="partner_bank_id" />
                    <field name="comment" />
                </group>
                <footer><button
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <act_window
        id="action_account_invoice_mass_create"
        multi="True"
        key2="client_action_multi"
        name="Create invoices"
        res_model="account.invoice.mass.create"
        src_model="res.partner"
        view_mode="form"
        target="new"
        view_type="form"
        groups="account.group_account_invoice"
    />
</odoo>
