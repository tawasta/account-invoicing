<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record
        id="account_invoice_commission_payment_wizard_form"
        model="ir.ui.view"
    >
        <field name="name">Create commission payments</field>
        <field name="model">account.invoice.commission.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Create payment">

                <group>
                    <field name="payment_date" />
                    <field name="commission_method" />
                    <field name="commission_partner" />
                    <field name="communication" />
                    <field name="add_zero_sum_lines" />
                </group>

                <footer>
                    <button
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="action_create_commission_payments"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_payments" model="ir.actions.act_window">
        <field name="name">Create commission payments</field>
        <field
            name="res_model"
        >account.invoice.commission.payment.wizard</field>
        <field name="view_mode">tree,form</field>
        <field
            name="view_id"
            ref="account_invoice_commission_payment_wizard_form"
        />
        <field name="target">new</field>
        <field
            name="groups_id"
            eval="[(4, ref('account.group_account_invoice'))]"
        />
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="binding_view_types">list</field>
    </record>

</odoo>
