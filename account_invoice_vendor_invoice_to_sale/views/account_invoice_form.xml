<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form.create.sale.order</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form" />
        <field name="arch" type="xml">

            <button name="action_invoice_draft" position="before">
                <button
                    name="%(action_invoice_to_sale_wizard)d"
                    id="create_sale_order"
                    type="action"
                    string="Create sale"
                    groups="sales_team.group_sale_salesman"
                />
            </button>

            <notebook position="inside">
                <page
                    name="sale_orders"
                    string="Sale orders"
                    groups="sales_team.group_sale_salesman"
                    attrs="{'invisible': [('sale_order_ids', '=', [])]}"
                >
                    <field name="sale_order_ids" />
                </page>
            </notebook>

        </field>
    </record>
</odoo>
