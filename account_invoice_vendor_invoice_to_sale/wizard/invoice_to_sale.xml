<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="invoice_to_sale_wizard" model="ir.ui.view">
        <field name="name">invoice.to.sale.form</field>
        <field name="model">invoice.to.sale</field>
        <field name="arch" type="xml">
            <form id="invoice_to_sale">
                <group string="Options">
                    <field name="auto_confirm" widget="boolean_toggle" />
                    <field name="merge_order" widget="boolean_toggle" />
                    <field
                        name="merge_order_id"
                        attrs="{'invisible': [('merge_order', '=', False)], 'required': [('merge_order', '=', True)]}"
                    />
                    <field name="analytic_account" widget="boolean_toggle" />
                </group>
                <group string="Sale order">
                    <field
                        name="partner_id"
                        attrs="{'invisible': [('merge_order_id', '!=', False)], 'required': [('merge_order', '=', False)]}"
                    />
                    <field
                        name="user_id"
                        attrs="{'invisible': [('merge_order_id', '!=', False)], 'required': [('merge_order', '=', False)]}"
                    />
                    <field name="order_lines" />
                    <field
                        name="product_id"
                        attrs="{'invisible': [('order_lines', 'not in', ['merge', 'copy'])], 'required': [('order_lines', '=', 'merge')]}"
                    />
                    <label
                        for="product_id"
                        attrs="{'invisible': [('order_lines', '!=', 'copy')]}"
                        string=""
                    />
                    <div
                        class="alert alert-info oe_edit_only"
                        role="alert"
                        attrs="{'invisible': [('order_lines', '!=', 'copy')]}"
                    >Select a product to use for lines without a product</div>
                </group>

                <footer>
                    <button
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_invoice_to_sale_wizard" model="ir.actions.act_window">
        <field name="name">Create sale from invoice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">invoice.to.sale</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="sale.model_account_move" />
    </record>

</odoo>
