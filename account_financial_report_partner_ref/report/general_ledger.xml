<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_general_ledger_lines"
        inherit_id="account_financial_report.report_general_ledger_lines"
    >
        <t t-raw="line['partner_name']" position="after">
            <t
                t-set="ref_num"
                t-value="request.env['res.partner'].search([('id', '=', line['partner_id'])])"
            />
            <t t-if="ref_num.ref">
                (<t t-esc="ref_num.ref" />)
            </t>
        </t>
    </template>
</odoo>
