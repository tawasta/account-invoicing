<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.account.overdue.interest</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100" />
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_followup']" position="before">
                <div id="overdue_interest" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">

                    </div>
                    <div class="o_setting_right_pane">
                        <label for="overdue_interest" />
                        <field name="overdue_interest" />
                        <div class="text-muted">
                            Default overdue interest % for new customers and invoices
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
