<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.company.mismatch</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">

            <xpath
                expr="//div[@groups='account.group_account_invoice']"
                position="after"
            >
                <div
                    groups="account.group_account_invoice"
                    class="alert alert-danger"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': [('company_mismatch_journal_id','=',False)]}"
                >
                    Invoice company and journal company are mismatched!
                </div>

                <div
                    groups="account.group_account_invoice"
                    class="alert alert-danger"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': [('company_mismatch_account_id','=',False)]}"
                >
                    Invoice company and account company are mismatched!
                </div>

                <div
                    groups="account.group_account_invoice"
                    class="alert alert-danger"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': [('company_mismatch_fiscal_position_id','=',False)]}"
                >
                    Invoice company and fiscal position company are mismatched!
                </div>

                <div
                    groups="account.group_account_invoice"
                    class="alert alert-danger"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': [('company_mismatch_tax_ids','=',False)]}"
                >
                    Invoice company and line taxes company are mismatched!
                </div>

                <div
                    groups="account.group_account_invoice"
                    class="alert alert-danger"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': [('company_mismatch_account_ids','=',False)]}"
                >
                    Invoice company and line account company are mismatched!
                </div>
            </xpath>

            <field name="has_outstanding" position="after">
                <field name="company_mismatch_journal_id" invisible="1" />
                <field name="company_mismatch_account_id" invisible="1" />
                <field name="company_mismatch_fiscal_position_id" invisible="1" />
                <field name="company_mismatch_tax_ids" invisible="1" />
                <field name="company_mismatch_account_ids" invisible="1" />
            </field>

        </field>
    </record>
</odoo>
