<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="invoice_supplier_form_inherited" model="ir.ui.view">
        <field name="name">account.invoice.supplier.commission.inherited.form
        </field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="date_invoice" position="after">
                <field name="commission_paid"/>
            </field>
        </field>
    </record>

    <record id="invoice_supplier_form_inherited_search" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <filter name="refunds" position="after">
                <separator/>
                <filter name="commission_paid" string="Commission paid"
                        domain="[('commission_paid','=',True)]"/>
                <filter name="commission_paid"
                        string="Commission has not been paid"
                        domain="[('commission_paid','=',False)]"/>
                <separator/>
            </filter>
        </field>
    </record>
</odoo>
