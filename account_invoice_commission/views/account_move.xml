<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">account.move.tree.commission</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="commission_paid" optional="hide" />
            </field>
        </field>
    </record>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.commission</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qr_code_method']" position="after">
                <field name="commission_paid" />
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="after">
                <field name="commission_paid" optional="hide" />
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.move.select.commission</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <filter name="late" position="after">
                <separator/>
                <filter name="commission_paid" string="Commission paid" domain="[('commission_paid','=',True)]"/>
                <filter name="commission_not_paid" string="Commission has not been paid"
                        domain="[('commission_paid','=',False)]"/>
                <separator/>
            </filter>
        </field>
    </record>

</odoo>
