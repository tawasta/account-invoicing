<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="invoice_supplier_form" model="ir.ui.view">
			<field name="name">Invoice form review checkbox</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_supplier_form" />
			<field name="arch" type="xml">
				
				<field name="journal_id" position="after">
                    <field name="reviewed" />
                </field>

			</field>
		</record>

		<record id="invoice_tree" model="ir.ui.view">
			<field name="name">Invoice tree review checkbox</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_tree" />
			<field name="arch" type="xml">

				<field name="state" position="after">
                    <field name="reviewed" />
                </field>

			</field>
		</record>

		<record id="view_account_invoice_filter" model="ir.ui.view">
			<field name="name">Invoice search review checkbox</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.view_account_invoice_filter" />
			<field name="arch" type="xml">

				<search position="inside">
                    <filter name="reviewed" string="Reviewed" domain="[('reviewed','=',True)]" help="Reviewed Invoices"/>
                    <filter name="not_reviewed" string="Not Reviewed" domain="[('reviewed','=',False)]" help="Reviewed Invoices"/>
                </search>

			</field>
		</record>



	</data>
</odoo>