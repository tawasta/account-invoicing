<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field
            name="name"
        >account.move.form.inherit.account.invoice.warn.on.multiple.variant.company</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <xpath expr="//header" position="after">
                <field name="multiple_variant_companies_on_lines" invisible="1" />
                <div
                    name="multiple_variant_companies_warning_text"
                    class="alert alert-danger text-center"
                    role="alert"
                    attrs="{'invisible': [('multiple_variant_companies_on_lines','=',False)]}"
                >
                        The invoice lines contain product variants that belong to different companies.
                </div>
            </xpath>
        </field>
    </record>
</odoo>
