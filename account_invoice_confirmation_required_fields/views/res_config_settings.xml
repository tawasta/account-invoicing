<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_form_view" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.invoice.confirmation.required.fields</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[@id='invoicing_settings']" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="invoice_confirmation_required_fields_options"
                >
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <span
                            class="o_form_label"
                        >Required Fields When Confirming Invoices</span>
                        <div class="text-muted">
                            Prevent confirmation if the following are not filled in:
                        </div>
                        <div class="mt16">
                            <div class="content-group">
                                <div class="row">
                                    <field
                                        name="account_move_confirmation_partner_address_required"
                                        class="col-lg-1 ml16"
                                    />
                                    <label
                                        for="account_move_confirmation_partner_address_required"
                                    />
                                    <!-- <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."/> -->
                                </div>
                                <div class="row">
                                    <field
                                        name="account_move_confirmation_partner_email_required"
                                        class="col-lg-1 ml16"
                                    />
                                    <label
                                        for="account_move_confirmation_partner_email_required"
                                    />
                                    <!-- <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."/> -->
                                </div>
                                <div class="row">
                                    <field
                                        name="account_move_confirmation_partner_shipping_address_required"
                                        class="col-lg-1 ml16"
                                    />
                                    <label
                                        for="account_move_confirmation_partner_shipping_address_required"
                                    />
                                    <!-- <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."/> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
