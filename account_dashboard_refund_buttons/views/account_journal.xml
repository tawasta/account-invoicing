<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_journal_kanban" model="ir.ui.view">
        <field name="name">account.journal.refund.buttons.view.kanban</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//t[@t-name='JournalBodySalePurchase']/div/t[contains(@t-if, 'sale')]"
                position="inside"
            >
                <button
                    type="object"
                    context="{ 'refund': True }"
                    name="action_create_new"
                    class="btn btn-primary btn-sm"
                >
                    <span>New Refund</span>
                </button>
            </xpath>

            <xpath
                expr="//t[@t-name='JournalBodySalePurchase']/div/t[contains(@t-if, 'purchase')]"
                position="inside"
            >
                <button
                    type="object"
                    context="{ 'refund': True }"
                    name="action_create_new"
                    class="btn btn-primary btn-sm"
                >
                    <span>New Refund</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
