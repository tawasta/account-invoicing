<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="invoice_circulation_form" model="ir.ui.view">
        <field name="name">account.invoice.circluation.form</field>
        <field name="model">account.invoice.circulation</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">

            <form>
                <header>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="toggle_active"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-archive"
                        >
                            <field
                                name="active"
                                widget="boolean_button"
                                options="{&quot;terminology&quot;: &quot;archive&quot;}"
                            />
                        </button>
                    </div>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field
                                name="name"
                                default_focus="1"
                                placeholder="Description"
                            />
                        </h1>
                    </div>
                    <group>
                        <field name="user_id" />
                        <field
                            name="circulation_line_ids"
                            context="{'default_circulation_id': active_id}"
                        >
                            <tree editable="bottom">
                                <field name="sequence" awidget="handle" />
                                <field name="user_id" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>
